pipeline {
    agent { label 'docker-agent' } // Runs specifically on your Azure Agent VM

    environment {
        DOCKER_IMAGE = "my-python-app:${BUILD_NUMBER}"
        CONTAINER_NAME = "python-app-test"
    }

    stages {
        stage('Clean & Setup') {
            steps {
                script {
                    echo "Cleaning workspace..."
                    cleanWs()
                    
                    echo "Checking out code..."
                    checkout scm
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    // We go into the 'app' folder to find the Dockerfile
                    dir('app') {
                        sh "docker build -t ${DOCKER_IMAGE} ."
                    }
                }
            }
        }

        stage('Deploy / Run') {
            steps {
                script {
                    echo "Deploying container..."
                    // 1. Stop and remove old container if it exists (to avoid port conflicts)
                    // The '|| true' ensures the pipeline doesn't fail if the container doesn't exist yet
                    sh "docker stop ${CONTAINER_NAME} || true"
                    sh "docker rm ${CONTAINER_NAME} || true"

                    // 2. Run the new container detached (-d) on port 5000
                    sh "docker run -d -p 5000:5000 --name ${CONTAINER_NAME} ${DOCKER_IMAGE}"
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    // Quick smoke test: Curl localhost to see if it replies
                    echo "Verifying service is up..."
                    sh "sleep 5" // Give it a moment to start
                    sh "curl -f http://localhost:5000"
                }
            }
        }
    }
}